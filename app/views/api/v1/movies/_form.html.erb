<%= form_with model: @movie, url: @form_url, method: method do |f| %>
  <div class="form-group mt-3 mb-3">
    <%= f.label :title %><br />
    <%= f.text_field :title, class: "form-control mt-3" %>
    <% if @movie.errors.has_key?(:title) %>
      <p class="text-danger"><%= @movie.errors[:title].first %></p>
    <% end %>
  </div>
  <div class="form-group mt-3 mb-3">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control mt-3" %>
  </div>
  <div class="field form-group mt-3 mb-3">
    <%= f.label :release_date %><br />
    <%= f.date_field :release_date, class: "form-control mt-3" %>
    <% if @movie.errors.has_key?(:release_date) %>
      <p class="text-danger"><%= @movie.errors[:release_date].first %></p>
    <% end %>
  </div>
  <div class="field form-group mt-3 mb-3">
    <%= f.label :duration %>
    <%= f.number_field :duration, class: "form-control mt-3" %>
    <% if @movie.errors.has_key?(:duration) %>
      <p class="text-danger"><%= @movie.errors[:duration].first %></p>
    <% end %>
  </div>
  <%# cover img %>
  <div class="field form-group mt-3 mb-3">
    <%= f.label :cover_img %><br />
    <%= f.file_field :cover_img, class: "form-control mt-3" %>
  </div>
  <div class="actions form-group mt-3 mb-3">
    <%= f.submit t('movies.form.add'), class: "btn btn-primary" %>
  </div>
<% end %>
