<h2><%= t('devise.password.form.forgot_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "api/v1/users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t('devise.password.form.email') %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.password.form.reset_instruction') %>
  </div>
<% end %>

<%= render "api/v1/users/shared/links" %>
