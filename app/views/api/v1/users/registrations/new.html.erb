<div class="container d-flex justify-content-center flex-column">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group mt-3 mb-3">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, class: "form-control mt-3" %>
      <% if resource.errors.has_key?(:first_name) %>
        <p class="text-danger"><%= resource.errors[:first_name].first %></p>
      <% end %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, class: "form-control mt-3" %>
      <% if resource.errors.has_key?(:last_name) %>
        <p class="text-danger"><%= resource.errors[:last_name].first %></p>
      <% end %>
    </div>
    <div class="field form-group mt-3 mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-3" %>
      <% if resource.errors.has_key?(:email) %>
        <p class="text-danger"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>
    <div class="field form-group mt-3 mb-3">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-3" %>
      <% if resource.errors.has_key?(:password) %>
        <p class="text-danger"><%= resource.errors[:password].first %></p>
      <% end %>
    </div>
    <div class="field form-group mt-3 mb-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mt-3"%>
      <% if resource.errors.has_key?(:password_confirmation) %>
        <p class="text-danger"><%= resource.errors[:password_confirmation].first %></p>
      <% end %>
    </div>
    <div class="actions form-group mt-3 mb-3">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= render "api/v1/users/shared/links" %>
</div>
