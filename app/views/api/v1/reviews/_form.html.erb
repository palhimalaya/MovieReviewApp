
<%= form_with model: @review, url: @form_url, method: method do |form| %>
          <div class="field mt-4">
            <%= form.label :rating %>
            <%= form.number_field :rating, class: "form-control" %>
          </div>
          <div class="field mt-4">
            <%= form.label :review %>
            <%= form.text_area :review, class: "form-control" %>
          </div>
          <div class="mt-4">
            <%= form.submit t('view_movie.review.button.add'), class: "btn btn-primary" %>
          </div>
<% end %>