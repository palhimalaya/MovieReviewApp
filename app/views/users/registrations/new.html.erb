<div class="container d-flex justify-content-center flex-column">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group mt-3 mb-3">
     <%= f.label :first_name %><br />
     <%= f.text_field :first_name, class: "form-control mt-3" %>
  </div>

  <div class="form-group mt-3 mb-3">
     <%= f.label :last_name %><br />
     <%= f.text_field :last_name, class: "form-control mt-3" %>
  </div>

  <div class="field form-group mt-3 mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-3" %>
  </div>

  <div class="field form-group mt-3 mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-3" %>
  </div>

  <div class="field form-group mt-3 mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", class: "form-control mt-3"%>
  </div>

  <div class="actions form-group mt-3 mb-3">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
